<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.PetWellnessTracker">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!-- Custom theme for the Pet Wellness Tracker -->
    <style name="Theme.PetWellnessTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/pastel_blue</item>
        <item name="colorPrimaryVariant">@color/pastel_blue_variant</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/background_primary</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/status_bar</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/navigation_bar</item>
    </style>
</resources>
